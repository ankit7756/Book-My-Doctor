<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Doctor Image -->
        <ImageView
            android:id="@+id/appointmentDoctorImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_person_24" />

        <!-- Appointment Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/appointmentDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. John Smith"
                android:textColor="@color/dark_gray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/appointmentSpecialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cardiologist"
                android:textColor="#7F8C8D"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/appointmentDateAndDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-02-23 (Sunday)"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/appointmentTimeSlot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning (7:00 AM - 11:00 AM)"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Cancel Button -->
        <Button
            android:id="@+id/btnCancelAppointment"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="#FF0000"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:paddingHorizontal="8dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>